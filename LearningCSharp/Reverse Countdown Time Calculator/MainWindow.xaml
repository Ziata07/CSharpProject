<Window x:Name="Main_Window" x:Class="Reverse_Countdown_Time_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reverse_Countdown_Time_Calculator"
        mc:Ignorable="d"
        Title="Reverse Time Calculator" Height="450" Width="800">
    <Grid>
        <Label Content="Enter Amount of Seconds Here" HorizontalAlignment="Left" Height="25" Margin="35,19,0,0" VerticalAlignment="Top" Width="161" FontFamily="Segoe UI Black" FontSize="10"/>
        <TextBox x:Name="secondsInputBox" HorizontalAlignment="Left" Height="23" Margin="50,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" BorderThickness="1" ClipToBounds="True"/>
        <Button x:Name="clickConvert_Button" Content="Click Here to Convert!" HorizontalAlignment="Left" Margin="50,73,0,0" VerticalAlignment="Top" Width="120" FontFamily="Segoe UI Black" FontSize="9"/>
        <TextBlock HorizontalAlignment="Left" Margin="83,108,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
